#!/usr/bin/env python

import sys
from netaddr import IPNetwork

try:
    ip = IPNetwork(sys.argv[1])
except:
    sys.exit("Couldn't read input")

print(f"network        : {ip.network}")
print(f"netmask        : {ip.netmask}")
print(f"wildcard       : {ip.hostmask}")
print(f"broadcast      : {ip.broadcast}")
print(f"cidr           : {ip.cidr}")
