# Suggest function
suggest() {
    if [[ "$#" -lt 1 ]]; then
        echo "Usage: suggest <MULTI-WORD STRING>"
        return 1
    fi

    printf "Exit\n" | ghcs "$@" | tail -n +7 | head -n 5
}

# Copy function
copy() {
  local input
  input=$(cat)
  printf "\e]52;c;%s\a" "$(printf %s "$input" | base64 | tr -d '\n')"
}

